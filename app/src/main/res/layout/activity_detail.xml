<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="178dp"
        android:background="?attr/colorButtonNormal"
        app:layout_constraintBottom_toTopOf="@+id/theme_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/liness"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:scaleType="fitCenter"
            android:src="@drawable/liness" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DANCE WORLD"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="43dp" />


        <ImageView
            android:id="@+id/settings"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/settings" />

        <ImageView
            android:id="@+id/heart"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/image"
        android:layout_width="436dp"
        android:layout_height="706dp"
        android:layout_marginBottom="160dp"

        android:src="@drawable/detail1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/artist"
        android:layout_width="326dp"
        android:layout_height="72dp"
        android:layout_marginBottom="410dp"
        android:layout_marginTop="1dp"
        android:text="Artists"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"/>

    <Button
        android:id="@+id/djs"
        android:layout_width="326dp"
        android:layout_height="72dp"
        android:layout_marginBottom="250dp"
        android:layout_marginTop="15dp"
        android:text="DJ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"/>

    <Button
        android:id="@+id/workshop"
        android:layout_width="326dp"
        android:layout_height="72dp"
        android:layout_marginBottom="116dp"
        android:layout_marginTop="50dp"
        android:text="Workshop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"/>


</androidx.constraintlayout.widget.ConstraintLayout>